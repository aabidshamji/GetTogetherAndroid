<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AccountActivity">

    <TextView
            android:text="First Name:"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/tvFirst" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.121"
            app:layout_constraintVertical_bias="0.119"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etFirst"
            app:layout_constraintTop_toBottomOf="@+id/tvFirst" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.235"/>
    <TextView
            android:text="Last Name:"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/tvLast" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etFirst" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.121"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etLast"
            app:layout_constraintTop_toBottomOf="@+id/tvLast" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.235"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp "
            android:id="@+id/tvEmail" android:text="Email Address:"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/etLast"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.13"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmail"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.235"/>
    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/tvPassword" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.118"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPassword"
            app:layout_constraintTop_toBottomOf="@+id/tvPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.235"/>
    <TextView
            android:text="Confirm Password:"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/tvConfirm" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.144"/>
    <EditText
            android:layout_width="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etConfirm"
            android:layout_height="33dp"
            app:layout_constraintTop_toBottomOf="@+id/tvConfirm" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.235"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.46"/>
</android.support.constraint.ConstraintLayout>